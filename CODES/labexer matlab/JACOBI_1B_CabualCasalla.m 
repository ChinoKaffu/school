% MAIN %
    clc
    clear
    format long

    % start of user input %
    A = [
        4 -1 -1 0 0 0 0 0;
        -1 4 -1 -1 0 0 0 0;
        0 -1 4 -1 -1 0 0 0;
        0 0 -1 4 -1 -1 0 0;
        0 0 0 -1 4 -1 -1 0;
        0 0 0 0 -1 4 -1 -1;
        0 0 0 0 0 -1 4 -1;
        0 0 0 0 0 0 -1 4;
    ];

    b = [18;18;4;4;26;16;10;32];

    % end of user input %

    % JACOBI METHOD %
    fprintf("Now executing JACOBI METHOD"); 
    pause(1);    fprintf("1.. ");
    pause(1);    fprintf("2.. ");
    pause(1);    fprintf("3.. "); pause(1);

    [M,x] = jacobi(A,b);
    % TODO: OUTPUT M and x %

% FUNCTIONS %
    function [M,x] = jacobi(A,b)
        % #TODO: input method here 
        M = "tite";

        size = (length(A));
        xk = zeros(size, 1);
        temp = diag(A);
        D = zeros(size);
        for i = 1:size
            D(i,i) = temp(i,:);
        end

        Lb = tril(A,-1);
        Ub = triu(A,1);
        Tj = -inv(D)*(Lb+Ub);
        Cj = inv(D)*b; %#ok<MINV> 

        % const finish %

        for i = 1:inf
            xk1 = (Tj*xk)+Cj;
            disp(i);
            disp(xk1);
            if(norm(xk-xk1)<10^-6), break; end
            xk = xk1;
        end

        x = xk1;
    end